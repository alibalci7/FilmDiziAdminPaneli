@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "CizgiFilmResim";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<CizgiFilm> cizgifilmler = ViewBag.cizgifilmler;
}

<style>
    td {
        cursor: pointer;
    }
</style>

<h2> Resim Ekle </h2>

<br />
<form action="/CizgiFilm/ResimEkle" method="post" enctype="multipart/form-data">

    <input type="file" name="uploadfile" id="uploadfile" />
    <br />

    @Html.TextBox("cizgifilmid", "", new { @class = "form-control", id = "cizgifilmlertextboxID", @readonly = true })
    @Html.TextBox("cizgifilm", "", new { @class = "form-control", id = "cizgifilmlertextbox", required = "required" })
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#CizgiFilmEkle">
        Çizgi Film Seç
    </button>

    @* Pop up *@
    <div class="modal fade" id="CizgiFilmEkle" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Çizgi Film Seç</h4>
                </div>
                <!-- begin ADVANCED TABLES ROW -->
                <div class="row">

                    <div class="col-lg-12">

                        <div class="portlet portlet-default">
                            <div class="portlet-heading">
                                <div class="portlet-title">
                                    <h4> Çizgi Filmler </h4>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="portlet-body">
                                <div class="table-responsive">
                                    <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                        <thead>
                                            <tr>
                                                <th> Çizgi Film </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in cizgifilmler)
                                            {
                                                <tr>
                                                    <td><a onclick="DiziEkleme('@item.CizgiFilmBaslik',@item.CizgiFilmID)">@item.CizgiFilmBaslik</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->

                    </div>
                    <!-- /.col-lg-12 -->

                </div>
                <!-- /.row -->
            </div>
        </div>
    </div>

    <br /><br />
    <input type="submit" value="Gönder" />
</form>

<script>
    var cizgifilmlertextbox = document.getElementById("cizgifilmlertextbox");
    var cizgifilmlertextboxID = document.getElementById("cizgifilmlertextboxID");

    function DiziEkleme(cizgifilm, id) {
        cizgifilmlertextbox.value = cizgifilm;
        cizgifilmlertextboxID.value = id;
    }

</script>




