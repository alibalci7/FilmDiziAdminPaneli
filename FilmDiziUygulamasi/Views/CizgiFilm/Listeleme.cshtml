@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "Çizgi Filmleri Listeleme";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<CizgiFilm> cizgifilmler = ViewBag.cizgifilmlerim;
    bool islem = ViewBag.islem;
}

<style>
    td {
        max-width: 300px;
    }
</style>

<br />
<center> <h1> Çizgi Filmler Listesi</h1> </center>
<br />

<div class="page-content">

    <br /> <br />
    <!-- begin ADVANCED TABLES ROW -->
    <div class="row">

        <div class="col-lg-12">

            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4> Tüm Çizgi Filmler </h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Toplam İzlenme Süresi</th>
                                    <th>Ekleyen Yönetici</th>
                                    <th>Bölümleri Göster</th>
                                    <th>Çizgi Filmi Güncelle</th>
                                    <th>
                                        Çizgi Filmi
                                        Sil
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in cizgifilmler)
                                {
                                    <tr>
                                        <td>@item.CizgiFilmBaslik</td>
                                        <td>@item.CizgiFilmIzlenmeSayisi</td>
                                        <td> @item.CizgiFilmEkleyenAd</td>
                                        <td><a class="btn btn-info" href="/CizgiFilm/Bolumler/@item.CizgiFilmID">Bölümlerimi Göster</a></td>
                                        <td><a class="btn btn-primary" href="/CizgiFilm/CizgiFilmGuncelle/@item.CizgiFilmID">Güncelle</a></td>
                                        <td><a class="btn btn-danger" href="/CizgiFilm/CizgiFilmSil/@item.CizgiFilmID">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
            <!-- /.portlet -->

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.page-content -->

@section scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @if (islem)
    {
        <script>function İslem() { swal('İşlem Başarılı!', '', 'success'); }; İslem();</script>
    }

}
