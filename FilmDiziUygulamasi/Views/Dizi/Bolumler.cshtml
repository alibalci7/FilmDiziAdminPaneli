@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "Bolumler";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<DiziBolum> bolumler = ViewBag.bolumlerim;
}

<br /><br />

<!-- begin ADVANCED TABLES ROW -->
<div class="row">

    <div class="col-lg-12">

        <div class="portlet portlet-default">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4> Bölümler </h4>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                        <thead>
                            <tr>
                                <th>Bölüm Adı</th>
                                <th>Sezon Numarası</th>
                                <th>İzlenme Sayısı</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in bolumler)
                            {
                                <tr>
                                    <td>@item.DiziBolummBaslik</td>
                                    <td>@item.DiziBolumSezonNo</td>
                                    <td>@item.DiziIzlenmeSayisi</td>
                                    <td><a class="btn btn-primary" href="/Dizi/BolumGuncelle/@item.DiziBolumID">Güncelle</a></td>
                                    <td><a class="btn btn-danger" href="/Dizi/BolumSil/@item.DiziBolumID">Sil</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.portlet-body -->
        </div>
        <!-- /.portlet -->

    </div>
    <!-- /.col-lg-12 -->

</div>
<!-- /.row -->
