@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "DiziResim";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<Dizi> diziler = ViewBag.diziler;
}

<style>
    td {
        cursor: pointer;
    }
</style>

<h2> Resim Ekle </h2>

<br />
<form action="/Dizi/ResimEkle" method="post" enctype="multipart/form-data">

    <input type="file" name="uploadfile" id="uploadfile" />
    <br />

    @Html.TextBox("diziid", "", new { @class = "form-control", id = "dizilertextboxID", @readonly = true })
    @Html.TextBox("dizi", "", new { @class = "form-control", id = "dizilertextbox", required = "required" })
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#DiziEkle">
        Dizi Seç
    </button>

    @* Pop up *@
    <div class="modal fade" id="DiziEkle" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Dizi Seç</h4>
                </div>
                <!-- begin ADVANCED TABLES ROW -->
                <div class="row">

                    <div class="col-lg-12">

                        <div class="portlet portlet-default">
                            <div class="portlet-heading">
                                <div class="portlet-title">
                                    <h4> Diziler </h4>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="portlet-body">
                                <div class="table-responsive">
                                    <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                        <thead>
                                            <tr>
                                                <th> Dizi </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in diziler)
                                            {
                                                <tr>
                                                    <td><a onclick="DiziEkleme('@item.DiziBaslik',@item.DiziID)">@item.DiziBaslik</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->

                    </div>
                    <!-- /.col-lg-12 -->

                </div>
                <!-- /.row -->
            </div>
        </div>
    </div>

    <br /><br />
    <input type="submit" value="Gönder" />
</form>

<script>
    var dizilertextbox = document.getElementById("dizilertextbox");
    var dizilertextboxID = document.getElementById("dizilertextboxID");

    function DiziEkleme(dizi, id) {
        dizilertextbox.value = dizi;
        dizilertextboxID.value = id;
    }

</script>



