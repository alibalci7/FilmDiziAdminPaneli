@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "Dizileri Listeleme";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<Dizi> diziler = ViewBag.dizilerim;
    bool islem = ViewBag.islem;
}

<style>
    td {
        max-width: 300px;
    }
</style>

<br />
<center> <h1> Diziler Listesi</h1> </center>
<br />

<div class="page-content">

    <br /> <br />
    <!-- begin ADVANCED TABLES ROW -->
    <div class="row">

        <div class="col-lg-12">

            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4> Tüm Diziler </h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                            <thead>
                                <tr>
                                    <th> Adı </th>
                                    <th> Konusu </th>
                                    <th> Başlangıç Yılı </th>
                                    <th> IMDB Puanı </th>
                                    <th> Toplam İzlenme Süresi </th>
                                    <th> Beğeni Oranı </th>
                                    <th> Oyuncuları </th>
                                    <th> Yönetmenleri </th>
                                    <th> Ekleyen Yönetici </th>
                                    <th>Bölümleri Göster</th>
                                    <th>Diziyi Güncelle</th>
                                    <th>Diziyi Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in diziler)
                                {
                                    <tr>
                                        <td>@item.DiziBaslik</td>
                                        <td><details> <summary> Konuyu görmek için tıklayınız. </summary> @item.DiziKonu </details></td>
                                        <td>@item.DiziBaslangicYili</td>
                                        <td>@item.DiziIMDB</td>
                                        <td>@item.DiziIzlenmeSayisi</td>
                                        <td>@item.DiziBegeniOrani</td>
                                        <td>@item.DiziOyuncular</td>
                                        <td>@item.DiziYonetmenler</td>
                                        <td> @item.DiziEkleyenAd</td>
                                        <td><a class="btn btn-info" href="/Dizi/Bolumler/@item.DiziID">Bölümlerimi Göster</a></td>
                                        <td><a class="btn btn-primary" href="/Dizi/DiziGuncelle/@item.DiziID">Güncelle</a></td>
                                        <td><a class="btn btn-danger" href="/Dizi/DiziSil/@item.DiziID">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
            <!-- /.portlet -->

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.page-content -->

@section scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @if (islem)
    {
        <script>function İslem() { swal('İşlem Başarılı!', '', 'success'); }; İslem();</script>
    }

}

