@using FilmDiziUygulamasi.Models;

@{
    ViewBag.Title = "Oyuncular";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<Oyuncular> oyuncular = ViewBag.oyuncular;
}

<br />
<center> <h1>Oyuncular Listesi</h1> </center>
<br />
<a class="btn btn-success" href="/DiziFilmOyuncular/Ekle">Oyuncu Ekle</a>
<br />
<br />

<div class="page-content">

    <!-- begin ADVANCED TABLES ROW -->
    <div class="row">

        <div class="col-lg-12">

            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Oyuncular Listesi</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                            <thead>
                                <tr>
                                    <th>Oyuncu ID</th>
                                    <th>Oyuncu Ad Soyad</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var oyuncu in oyuncular)
                                {
                                    <tr>
                                        <td>@oyuncu.OyuncuID</td>
                                        <td>@oyuncu.OyuncuAdSoyad</td>
                                        <td><a class="btn btn-primary" href="/DiziFilmOyuncular/Guncelle/@oyuncu.OyuncuID">Güncelle</a></td>
                                        <td><a class="btn btn-danger" href="/DiziFilmOyuncular/Sil/@oyuncu.OyuncuID">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
            <!-- /.portlet -->

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.page-content -->