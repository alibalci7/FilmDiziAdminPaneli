@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "Yönetmenler";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<Yonetmenler> yonetmenler = ViewBag.yonetmenler;
}

<br />
<center> <h1>Yonetmenler Listesi</h1> </center>
<br />
<a class="btn btn-success" href="/DiziFilmYonetmenler/Ekle">Yönetmen Ekle</a>
<br />
<br />

<div class="page-content">

    <!-- begin ADVANCED TABLES ROW -->
    <div class="row">

        <div class="col-lg-12">

            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Yönetmenler Listesi</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                            <thead>
                                <tr>
                                    <th>Yönetmen ID</th>
                                    <th>Yönetmen Ad Soyad</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var yonetmen in yonetmenler)
                                {
                                    <tr>
                                        <td>@yonetmen.YonetmenID</td>
                                        <td>@yonetmen.YonetmenAdSoyad</td>
                                        <td><a class="btn btn-primary" href="/DiziFilmYonetmenler/Guncelle/@yonetmen.YonetmenID">Güncelle</a></td>
                                        <td><a class="btn btn-danger" href="/DiziFilmYonetmenler/Sil/@yonetmen.YonetmenID">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
            <!-- /.portlet -->

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.page-content -->
