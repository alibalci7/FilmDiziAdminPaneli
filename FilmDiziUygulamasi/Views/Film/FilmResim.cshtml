@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "FilmResim";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<Film> filmler = ViewBag.filmler;
}
<style>
    td {
        cursor: pointer;
    }
</style>

<h2> Resim Ekle </h2>

<br />
<form action="/Film/ResimEkle" method="post" enctype="multipart/form-data">

    <input type="file" name="uploadfile" id="uploadfile" />
    <br />

    @Html.TextBox("filmid", "", new { @class = "form-control", id = "filmlertextboxID", @readonly = true })
    @Html.TextBox("film", "", new { @class = "form-control", id = "filmlertextbox", required = "required" })
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#FilmEkle">
        Film Seç
    </button>

    @* Pop up *@
    <div class="modal fade" id="FilmEkle" tabindex="-1" role="dialog" aria-labelledby="">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h4 class="modal-title" id="myModalLabel">Film Seç</h4>
                </div>
                <!-- begin ADVANCED TABLES ROW -->
                <div class="row">

                    <div class="col-lg-12">

                        <div class="portlet portlet-default">
                            <div class="portlet-heading">
                                <div class="portlet-title">
                                    <h4> Filmler </h4>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="portlet-body">
                                <div class="table-responsive">
                                    <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                                        <thead>
                                            <tr>
                                                <th> Film </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in filmler)
                                            {
                                                <tr>
                                                    <td><a onclick="FilmEkleme('@item.FilmBaslik',@item.FilmID)">@item.FilmBaslik</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->

                    </div>
                    <!-- /.col-lg-12 -->

                </div>
                <!-- /.row -->
            </div>
        </div>
    </div>

    <br /><br />
    <input type="submit" value="Gönder" />
</form>

<script>
    var filmlertextbox = document.getElementById("filmlertextbox");
    var filmlertextboxID = document.getElementById("filmlertextboxID");

    function FilmEkleme(film, id) {
        filmlertextbox.value = film;
        filmlertextboxID.value = id;
    }

</script>

