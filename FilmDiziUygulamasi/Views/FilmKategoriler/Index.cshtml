@using FilmDiziUygulamasi.Models;

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<Kategoriler> kategoriler = ViewBag.kategoriler;
    string ustkategori;
}

<br />
<center> <h1>Kategoriler Listesi</h1> </center>
<br />
<a class="btn btn-success" href="/FilmKategoriler/Ekle">Kategori Ekle</a>
<br />
<br />

<div class="page-content">

    <!-- begin ADVANCED TABLES ROW -->
    <div class="row">

        <div class="col-lg-12">

            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Kategoriler Listesi</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                            <thead>
                                <tr>
                                    <th>Kategori ID</th>
                                    <th>Üst Kategori Adı</th>
                                    <th>Kategori Adı</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kategori in kategoriler)
                                {
                                    <tr>
                                        <td>@kategori.KategoriID</td>
                                        <td>@{ustkategori = kategori.KategoriUstID == 1 ? "Yerli Filmler" : "Yabancı Filmler";} @ustkategori</td>
                                        <td>@kategori.KategoriAd</td>
                                        <td><a class="btn btn-danger" href="/FilmKategoriler/Sil/@kategori.KategoriID">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
            <!-- /.portlet -->

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.page-content -->
