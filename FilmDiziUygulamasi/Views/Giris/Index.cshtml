@model FilmDiziUygulamasi.Models.Yoneticiler
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Giriş Sayfası</title>

    <!-- GLOBAL STYLES -->
    <link href="~/Content/css/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700,300italic,400italic,500italic,700italic' rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel="stylesheet" type="text/css">
    <link href="~/Content/icons/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <!-- PAGE LEVEL PLUGIN STYLES -->
    <!-- THEME STYLES -->
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/css/plugins.css" rel="stylesheet">

    <!-- THEME DEMO STYLES -->
    <link href="~/Content/css/demo.css" rel="stylesheet">

    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <style>
        .form-control{
            border:none;
            border-bottom:solid 1px black;
        }
    </style>
</head>

<body class="login">

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-banner text-center">
                    <h1>Zentek Yöneticilik </h1>
                </div>
                <div class="portlet portlet-green">
                    <div class="portlet-heading login-heading">
                        <div class="portlet-title">
                            <h4>
                                <strong> Yöneticilik Sayfasına Giriş! </strong>
                            </h4>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="portlet-body">
                        <div>
                            @using (Html.BeginForm("Kontrol", "Giris", FormMethod.Post))
                            {
                                <table cellpadding="10" cellspacing="10" class="table table-responsive">
                                    <tr>
                                        <td>
                                            @Html.Label("Yönetici Adı")
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(m => m.YoneticiAdi, new { @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr><td colspan="2">&nbsp;</td></tr>
                                    <tr>
                                        <td> @Html.Label("Parola")</td>
                                        <td>
                                            @Html.TextBoxFor(m => m.YoneticiParola, new { type = "password", @class = "form-control" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"> <div class="checkbox"><label><input name="remember" type="checkbox" value="Remember Me">Beni Hatırla</label></div></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"><input type="submit" class="btn btn-lg btn-green btn-block" value="Giriş Yap"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="2"> <a href="#"> Şifremi Unuttum! </a></td>
                                    </tr>
                               </table>
                             }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- GLOBAL SCRIPTS -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="~/Content/js/plugins/bootstrap/bootstrap.min.js"></script>
    <script src="~/Content/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <!-- HISRC Retina Images -->
    <script src="~/Content/js/plugins/hisrc/hisrc.js"></script>

    <!-- PAGE LEVEL PLUGIN SCRIPTS -->
    <!-- THEME SCRIPTS -->
    <script src="~/Content/js/flex.js"></script>

</body>

</html>
