@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "Hesabım";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Yoneticiler y = ViewBag.hesabım;
}

<br /><br />
<div class="col-lg-12">

    <div class="portlet portlet-default">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h4>Hesabım</h4>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="portlet-body">
            <div class="table-responsive">
                <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Kullanıcı Adı</th>
                            <th> Parola</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                        <tr>
                            <td>@y.YoneticiID</td>
                            <td>@y.YoneticiAdi</td>
                            <td>@y.YoneticiParola</td>
                            <td><a class="btn btn-primary" href="/Hesabim/Guncelle">Güncelle</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.portlet-body -->
    </div>
    <!-- /.portlet -->

</div>
<!-- /.col-lg-12 -->
