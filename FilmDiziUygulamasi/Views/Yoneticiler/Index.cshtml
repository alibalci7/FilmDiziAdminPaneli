@using FilmDiziUygulamasi.Models;
@{
    ViewBag.Title = "Yöneticiler";
    Layout = "~/Views/Shared/_GelismisTablo.cshtml";
    List<Yoneticiler> yoneticiler = ViewBag.yoneticiler;
}

<br />
<center> <h1> Yöneticiler Listesi</h1> </center>
<br />
<a class="btn btn-success" href="/Yoneticiler/Ekle">Yönetici Ekle</a>
<br />
<br />

<div class="page-content">

    <!-- begin ADVANCED TABLES ROW -->
    <div class="row">

        <div class="col-lg-12">

            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Yöneticiler Listesi</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table id="example-table" class="table table-striped table-bordered table-hover table-green">
                            <thead>
                                <tr>
                                    <th>Yönetici ID</th>
                                    <th>Yönetici Ad </th>
                                    <th>Yönetici Parola </th>
                                    <th>Yönetici Tip </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var yonetici in yoneticiler)
                                {
                                <tr>
                                    <td>@yonetici.YoneticiID</td>
                                    <td>@yonetici.YoneticiAdi</td>
                                    <td>@yonetici.YoneticiParola</td>
                                    <td>@yonetici.YoneticiTip</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.portlet-body -->
            </div>
            <!-- /.portlet -->

        </div>
        <!-- /.col-lg-12 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.page-content -->
